<mujoco model="simple_arm">
    <default>
        <!-- Fusion 360 の座標系を MuJoCo に変換します -->
        <geom type="mesh" xyaxes="1 0 0 0 0 1"/>
    </default>

    <asset>
        <mesh name="base" file="stl/base.stl" scale=".001 .001 .001"/>
        <mesh name="link1" file="stl/link1.stl" scale=".001 .001 .001"/>
        <mesh name="link2" file="stl/link2.stl" scale=".001 .001 .001"/>
    </asset>

    <worldbody>
        <body name="base">
            <geom mesh="base"/>
            <body name="link1">
                <joint name="joint1" pos=".1 -.015 .05" axis="0 1 0" limited="true" range="-45 45"/>
                <geom mesh="link1"/>
                <body name="link2">
                    <joint name="joint2" pos=".1583 -.01 .1994" axis="0 1 0" limited="true" range="-90 90"/>
                    <geom mesh="link2"/>
                </body>
            </body>
        </body>
    </worldbody>
</mujoco>